<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <androidx.media3.ui.PlayerView
        android:id="@+id/player_view_short_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:use_controller="false"/>

    <LinearLayout
        android:gravity="center"
        android:layout_marginEnd="10dp"
        android:layout_gravity="center|end"
        android:layout_marginTop="200dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_heart"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_number_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="1234"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_comment"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_comment"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_number_cmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="723"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_share"
            android:layout_marginTop="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_share"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_number_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="358"/>

        <FrameLayout
            android:id="@+id/btn_channel"
            android:layout_marginTop="20dp"
            android:layout_width="40dp"
            android:layout_height="40dp">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_gravity="center"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/RoundImage"
                android:src="@drawable/nen1"/>

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_follow"
                android:layout_gravity="bottom"/>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="50dp"
        android:layout_gravity="bottom"
        android:layout_width="300dp"
        android:layout_height="120dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Yoonhee Official"/>

            <com.google.android.material.button.MaterialButton
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Đăng ký "
                android:textSize="10sp"
                android:textStyle="bold"
                android:backgroundTint="@color/blue_3"
                android:drawableLeft="@drawable/ic_follow"
                android:textAllCaps="false"
                app:cornerRadius="25dp"/>

        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            android:text="Thủ Tướng Chỉ Đạo 10 Tỉnh, Thành Phố Chuẩn Bị Sẵn Sàng Để Hỗ Trợ Hà Nội Phòng, Chống Dịch Covid-19 | Tin Nóng ANTV"/>
    </LinearLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/btn_pause_resume"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/ic_pause"
        android:visibility="gone"
        android:layout_gravity="center"/>
</FrameLayout>