<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_video_image_short"
        android:layout_width="185dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/nen2"
        app:shapeAppearanceOverlay="@style/RoundImageVideo"
        app:layout_constraintDimensionRatio="0.75"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_title_video_short"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textSize="16sp"
        android:text="Day la string test xem co bi tran thanh khong"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_video_image_short" />

    <LinearLayout
        android:weightSum="3"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_title_video_short">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_avatar_channel_short"
            android:scaleType="centerCrop"
            android:layout_width="28dp"
            android:layout_height="28dp"
            app:shapeAppearanceOverlay="@style/RoundImage"
            android:src="@drawable/nen1" />
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_name_channel_short"
            android:layout_weight="2.8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:textSize="13sp"
            android:textColor="@color/non_gray"
            android:text="@string/gautv"/>
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txt_total_like_short"
            android:layout_weight="0.2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:drawableLeft="@drawable/ic_like"
            android:drawablePadding="5dp"
            android:layout_gravity="center"
            android:textColor="@color/non_gray"
            android:text="1312"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>