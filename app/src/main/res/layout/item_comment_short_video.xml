<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/img_channel_comment"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:scaleType="centerCrop"
                android:src="@drawable/nen2"
                app:shapeAppearanceOverlay="@style/RoundImage" />

            <LinearLayout
                android:layout_weight="2.9"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txt_name_channel_comment"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/non_gray"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yoonhee_official"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_marginStart="5dp"
                        android:drawableLeft="@drawable/ellipse_52"
                        android:drawablePadding="5dp"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/non_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8 month ago"/>
                </LinearLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txt_comment_video"
                    android:layout_marginTop="7dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:maxLines="4"
                    android:text="@string/test_text"/>

                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="10dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_like"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txt_total_like_cmt"
                        android:layout_marginStart="5dp"
                        android:textSize="12sp"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="127"/>
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_dislike"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txt_total_dislike_cmt"
                        android:layout_marginStart="5dp"
                        android:textSize="12sp"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="58"/>
                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_comment_short_video"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_marginStart="5dp"
                        android:textSize="12sp"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="1273"/>
                </LinearLayout>
            </LinearLayout>

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_marginStart="10dp"
                android:layout_weight="0.1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@drawable/ic_cmt_more"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>